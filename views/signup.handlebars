<div class="card">
    <h2 class="card-header">Sign Up</h2>
    <div class="card-body">
        <form class="form login-form" id="signup-form">
            <div class="form-group">
                <label for="email-login">username:</label>
                <input class="form-input" type="text" id="username-input-signup" />
            </div>
            <div class="form-group">
                <label for="password-login">password:</label>
                <input class="form-input" type="password" id="password-input-signup" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Sign Up</button>
            </div>
        </form>
        <a class="btn btn-primary" href="/login">Login here</a>
    </div>
</div>

<script src="/js/signup.js"></script>