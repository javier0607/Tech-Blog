{{#each posts as |post|}}
<div class="card">
    <a href="post/{{id}}">
        <div class="card-header flex-row justify-space-between align-center">
            <h2>{{title}}</h2>
            <p>{{user.username}} - {{format_date createdAt}}</p>
        </div>
    </a>
    <P class="card-body">{{body}}</P>
</div>
{{/each}}