<div class="card">
    <h2 class="card-header">Login</h2>
    <div class="card-body">
        <form class="form login-form" id="login-form">
            <div class="form-group">
                <label for="email-login">username:</label>
                <input class="form-input" type="text" id="username-input-login" />
            </div>
            <div class="form-group">
                <label for="password-login">password:</label>
                <input class="form-input" type="password" id="password-input-login" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Login</button>
            </div>
        </form>
        <a class="btn btn-primary" href="/signup">Signup here</a>
    </div>
</div>
<script src="/js/login.js"></script>