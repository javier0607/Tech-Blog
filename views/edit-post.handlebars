<div class="card">
    <h2 class="card-header">Edit Post</h2>
    <div class="card-body">
        <form class="form login-form" id="edit-post-form">
            <div class="form-group">
                <label for="email-login">Title:</label>
                <input class="form-input" name="post-title" type="text" value="{{title}}" id="username-login" />
            </div>
            <div class="form-group">
                <label for="password-login">body:</label>
                <textarea class="form-input" name="post-body" id="password-login" rows="4" cols="50">{{body}}</textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Update Post</button>
                <button class="btn btn-primary" id="delete-btn">Delete Post</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/edit.js"></script>